<%- include('../includes/head') %>
<link rel="stylesheet" href="/css/order.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if(orders.length <= 0) {%>
        <h1>No items yet!</h1>
        <%} else {%>
        <div class="orders-container">
            <% orders.forEach(order => {%>
            <div class="order-container" id="<%=order._id%>">

                <div class="order">
                    <div class="order__id">id: <%=order._id%></div>
                    <div class="order__total-items"><%=10%></div>
                    <div class="order__total-price"><span>€</span><%=200.89%></div>
                    <button class="btn show" onclick="toogleDetails(event)">more details</button>
                </div>
                <div class="order-details hide">
                    <div class="orders-header">
                        <div class="item__img">Product</div>
                        <div class="item__title">Title</div>
                        <div class="item__quantity">Quantity</div>
                        <div class="item__price">Price</div>
                    </div>
                    <div class="orders-body">
                        <!-- list of items -->
                        <div class="items-container">
                            <%order.products.forEach(p => {%>
                            <div class="item">
                                <div class="item__img">
                                    <img src="<%=p.product.imageUrl%>" alt="item">
                                </div>
                                <div class="item__title"><%=p.product.title%></div>
                                <div class="item__quantity"><%=p.quantity%></div>
                                <div class="item__price"><span>€</span><%=p.product.price%></div>
                            </div>
                            <%})%>
                        </div>
                    </div>
                </div>
            </div>
            <%})%>
        </div>
        <%}%>
    </main>
    <%- include('../includes/end') %>